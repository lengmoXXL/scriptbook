[sandbox]
# Provider type: local_docker or opensandbox (default: local_docker)
provider = "opensandbox"

# Docker 镜像
image = "scriptbook/claude:latest"

# 初始化命令（在 sandbox 启动时执行）
init_commands = ["nohup python3 /app/entrypoint.py > /tmp/claude_daemon.log 2>&1 & sleep 3 && while [ ! -S /tmp/claude.sock ]; do sleep 0.5; done"]

# input_channel = "/tmp/claude.sock"
